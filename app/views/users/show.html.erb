<nav>
  <%= link_to 'Home', root_path %>
  <%= link_to 'Browse Books', books_path %>
</nav>

<h1> <%= @user.name %> </h1>
<section id= "Sort Reviews">
  <%= link_to 'Newest To Oldest', user_path(@user, sort: "n_to_o")%>
  <%= link_to 'Oldest To Newest', user_path(@user, sort: "o_to_n")%>
</section>
<% @user.reviews.each do |review| %>

<section class="single-review" id=<%= "review-#{review.id}" %>>
  <%= button_to "X", review_path(review.id), method: :delete %>

  <h3>Title: <%= review.title%></h3>
  <p>Book Title: <%= link_to review.book.title, book_path(review.book)%></p>
  <p><%= review.review%></p>
  <p>Rating: <%= review.rating%></p>
  <p>Date Reviewed: <%= review.created_at.to_date.to_s %></p>
  <img src=<%= review.book.cover %> alt="book cover">
</section>

<% end %>
